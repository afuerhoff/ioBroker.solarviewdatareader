{
    "type": "tabs",
    "tabsStyle": {
      "width": "calc(100% - 100px)"
    },
    "i18n": true,
    "items": {
      "tab-main": {
        "type": "panel",
        "label": "Main settings",
        "items": {
          "ipaddress": {
            "type": "text",
            "label": "IP-Address",
